{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "declaration": true,
    "declarationDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noEmit": false,
    "emitDeclarationOnly": true,
    "baseUrl": "./",
    "rootDir": "./src"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", ".vscode"]
}
